---
import { getI18N } from '../i18n/index.ts'

const locale = Astro.locals.currentLocale || 'en'
const t = getI18N({ currentLocale: locale });
---

<section id="about" class="pt-section bg-white dark:bg-primary bg-grid transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mx-auto">
      <div class="flex flex-col items-center gap-12">
        <!-- Content -->
        <div class="flex flex-col justify-center items-center text-center">
          <h2 class="text-3xl sm:text-4xl font-bold text-text-primary mb-6">
            {t.about.title}
          </h2>
          <p class="text-lg text-text-secondary mb-6 leading-relaxed text-balance">
            {t.about.text_1}
          </p>
          <p class="text-lg text-text-secondary mb-8 leading-relaxed text-balance">
            {t.about.text_2}
          </p>
          <div class="">
            <h3 class="text-xl font-semibold text-text-primary mb-3">{t.about.subtitle}</h3>
            <p class="text-text-secondary italic">
              {t.about.text_3}
            </p>
          </div>
        </div>

        <!-- Avatar/Photo Placeholder -->
        <div id="about-avatar" class="text-center bg-[url('./sergio.webp')] bg-contain bg-no-repeat bg-right size-[300px]">
          <div class="relative inline-block w-full h-full backdrop:grayscale">
            <div class="flex flex-col justify-end pb-11 w-full h-full backdrop-filter backdrop-grayscale">
              <h4 class="text-xl font-semibold text-gray-900 dark:text-white">Sergio SÃ¡nchez</h4>
              <p class="text-gray-600 dark:text-gray-300">Founder & CEO</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #about h2, #about p, #about-avatar {
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 30%;
  }
</style>
