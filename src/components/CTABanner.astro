---
import { getI18N } from '../i18n/index.ts'
import { AnimatedBeamDemo } from './AnimatedBeams'

const locale = Astro.locals.currentLocale || 'en'
const t = getI18N({ currentLocale: locale })
---

<section id="cta" class="pt-section bg-white dark:bg-primary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-text-primary mb-6">
        {t.cta_banner.title}
      </h2>
      <p class="text-xl text-text-secondary mb-8 max-w-3xl mx-auto">
        {t.cta_banner.subtitle}
      </p>
      <a href="#contact" class="button !inline-flex">
        {t.cta_banner.button}
      </a>
    </div>
  </div>
  <AnimatedBeamDemo client:visible />
</section>

<style>
  #cta h2, #cta p {
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 30%;
  }
  html.dark #cta {
    background-image: linear-gradient(180deg, hsl(0deg 0% 0%) 0%, rgba(237, 221, 83, 0) 30%), linear-gradient(0deg, hsl(0deg 0% 0%) 0%, rgb(255 255 255 / 0%) 35%), url(backgrounds/bg-main-dark-1440w.jpg);
    background-position: inherit;
    background-size: cover;
  }
  #cta {
    background-image: linear-gradient(180deg, hsl(0, 0%, 100%) 0%, rgb(255 255 255 / 0%) 81%), linear-gradient(0deg, hsl(0, 0%, 100%) 0%, rgb(255 255 255 / 0%) 35%), url(backgrounds/bg-main-light-1440w.jpg);
    background-position: inherit;
    background-size: cover;
  }
</style>
