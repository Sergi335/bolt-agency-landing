---
import { ContactForm } from '../components/ContactForm'
import { getI18N } from '../i18n/index.ts'
const locale = Astro.locals.currentLocale || 'en'
const t = getI18N({ currentLocale: locale })
---

<section id="contact" class="pt-section bg-white dark:bg-primary transition-colors duration-300 bg-grid">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-text-primary mb-4">
          {t.contact.title}
        </h2>
        <p class="text-xl text-text-secondary">
          {t.contact.subtitle}
        </p>
      </div>

      <div class="max-w-3xl mx-auto">
        <div class="lg:col-span-2">
          <ContactForm client:load currentLocale={locale} />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #contact h2, #contact p, #contact form, #contact-details {
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 30%;
  }
</style>
