---
import MagicCards from '@components/MagicCards'
import { getI18N } from '../i18n/index.ts'
const locale = Astro.locals.currentLocale || 'en'
const t = getI18N({ currentLocale: locale });

---

<section id="services" class="bg-primary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
  <div class="text-center mb-16">
    <h2 class="text-3xl sm:text-4xl font-bold text-text-primary mb-4">
      {t.services.title}
    </h2>
    <p class="text-xl text-text-secondary max-w-3xl mx-auto">
      {t.services.subtitle}
    </p>
  </div>

    <!-- Highlight Cards -->
  <MagicCards client:visible currentLocale={locale ? locale : 'es'} />
</section>
