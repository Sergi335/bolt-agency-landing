    <!-- Highlight Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      <!-- Web Creation -->
      <div class="max-w-sm">
       <MagicCard client:visible gradientColor={'#262626'} className="p-[1px] rounded-lg">
            <a href="#">
                <img class="rounded-t-lg object-cover aspect-video" src="/img2.png" alt="" />
            </a>
            <div class="p-5">
                <a href="#">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Web Creation</h5>
                </a>
                <p class="mb-7 font-normal text-gray-700 dark:text-secondary">Here are the biggest enterprise technology acquisitions of 2021 so far, in reverse chronological order.</p>
                <a href="#" class="button !inline-flex">
                    Read more
                    <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
