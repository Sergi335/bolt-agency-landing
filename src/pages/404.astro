---
import Layout from '@layouts/Layout.astro';
---

<Layout title="404 - Página no encontrada">
  <main class="flex items-center justify-center h-screen bg-white dark:bg-primary transition-colors duration-300">
    <div class="text-center px-4">
      <h1 class="text-6xl sm:text-8xl font-bold text-text-primary mb-4">404</h1>
      <p class="text-xl sm:text-2xl text-text-secondary mb-8">
        Lo sentimos, la página que buscas no se ha encontrado.
      </p>
      <a href="/" class="inline-block px-6 py-3 bg-accent text-white font-semibold rounded-md hover:bg-accent-dark transition-colors duration-200">
        Volver al inicio
      </a>
    </div>
  </main>
</Layout>
